                <button id="nav-btn" class="nav-button" onclick="nav_open()">
                    <img id="nav-btn-img" src="/assets/img/icons/nav-open.svg" alt="Nav button">
                </button>
                <script>
                    const nav = document.querySelector('#nav');
                    const navBtn = document.querySelector('#nav-btn');
                    const navBtnImg = document.querySelector('#nav-btn-img');

                    function nav_open() {
                        if (nav.classList.toggle('open')) {
                            navBtnImg.src = "/assets/img/icons/nav-close.svg";
                            navBtn.style.position = "fixed";
                        } else {
                            navBtnImg.src = '/assets/img/icons/nav-open.svg';
                            navBtn.style.position = "absolute";
                        }
                    }

                </script>
            </nav>
